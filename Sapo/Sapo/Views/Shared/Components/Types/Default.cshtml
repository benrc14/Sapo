@{

}

@model IEnumerable<string>

@*I added the style="position:fixed" on the left column on the first page so that the buttons move when you scroll.*@

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="index" asp-route-category="" asp-route-pageNum="1" class="btn btn-outline-secondary"
       style="position:fixed">Home</a>
    <br />
    <br />

    @foreach (string t in Model)
                {
                    <a asp-controller="Home" asp-action="Index" asp-route-category="@t" asp-route-pageNum="1"
                       class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")"style="position:fixed">@t</a>
                       <br />
                       <br />
            
                   
                }
</div>