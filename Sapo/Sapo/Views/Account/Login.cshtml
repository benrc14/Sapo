@{
    Layout = null;
}


@model LoginModel

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Sapo Login</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    </head>

    <body>

        <div class="bg-dark text-white p-2">
            <span class="navbar-band m-1-2">Sapo</span>
        </div>

        @*On this page I went through and changed the width of the input boxes
            and then centered them and the button.*@

        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-controller="Account" asp-action="Login">

            <div class="form-group text-center w-25" style="margin:auto;">
                <label asp-for="UserName">User name:</label>
                <input asp-for="UserName" class="form-control" style="margin:auto;"/>

            </div>

            <div class="form-group text-center w-25" style="margin:auto;">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" type="password" style="margin:auto;"/>

            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Log in</button>
            </div>

            <input type="hidden" asp-for="ReturnUrl" />

        </form>



    </body>


</html>